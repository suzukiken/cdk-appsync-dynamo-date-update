#set( $updated = $util.time.nowISO8601() )

{
  "version" : "2017-02-28",
  "operation" : "UpdateItem",
  "key" : {
    "id" : $util.dynamodb.toDynamoDBJson($context.arguments.input.id)
  },
  "update" : {
    "expression" : "SET title = :title, updated = :updated",
    "expressionValues": {
      ":title" : $util.dynamodb.toDynamoDBJson($context.arguments.input.title),
      ":updated" : $util.dynamodb.toDynamoDBJson($updated)
    }
  }
}
